@model WebProje.Models.Calisan

@{
    ViewData["Title"] = "Çalışan Detayları";
}

<h1>Çalışan Detayları</h1>
<a asp-controller="Calisan" asp-action="Index" class="btn btn-secondary">Geri</a>

<div>
    <h3>@Model.AdSoyad</h3>
    <p><strong>Uzmanlık Alanı:</strong> @Model.UzmanlikAlani</p>
    <p><strong>Uygun Saatler:</strong> @Model.UygunSaatler</p>
    <p><strong>Beceriler:</strong> @string.Join(", ", Model.Beceriler)</p>
</div>

<a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-primary">Düzenle</a>
<a href="@Url.Action("Delete", new { id = Model.Id })" class="btn btn-danger">Sil</a>
