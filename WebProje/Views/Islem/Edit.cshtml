@model WebProje.Models.Islem

<div class="container mt-5">
    <a asp-controller="Islem" asp-action="Index" class="btn btn-secondary">Geri</a>

    <h2>İşlem Düzenle</h2>
    <form asp-action="Edit" method="post">
        <div class="form-group">
            <label for="Ad">İşlem Adı</label>
            <input type="text" class="form-control" id="Ad" name="Ad" value="@Model.Ad" required />
        </div>

        <div class="form-group">
            <label for="Ucret">Ücret</label>
            <input type="number" class="form-control" id="Ucret" name="Ucret" value="@Model.Ucret" step="0.01" required />
        </div>

        <div class="form-group">
            <label for="Sure">Süre (dakika)</label>
            <input type="number" class="form-control" id="Sure" name="Sure" value="@Model.Sure" required />
        </div>

        <button type="submit" class="btn btn-success">Kaydet</button>
    </form>
</div>
