@model WebProje.Models.Salon

<h2>Edit Salon</h2>

<form asp-action="Edit">
    <div class="form-group">
        <label for="Isim">Salon İsmi</label>
        <input type="text" class="form-control" id="Isim" name="Isim" value="@Model.Ad" />
    </div>

    <div class="form-group">
        <label for="CalismaSaatleri">Çalışma Saatleri</label>
        <input type="text" class="form-control" id="CalismaSaatleri" name="CalismaSaatleri" value="@Model.CalismaSaatleri" />
    </div>

    <div class="form-group">
        <label for="Tip">Salon Tipi</label>
        <input type="text" class="form-control" id="Tip" name="Tip" value="@Model.Tip" />
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>
