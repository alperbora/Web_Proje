@model IEnumerable<WebProje.Models.Salon>



<h1>Salonlar</h1>
<a href="@Url.Action("Create", "Salon")">Yeni Salon Ekle</a>
<table>
    <thead>
        <tr>
            <th>Ad</th>
            <th>Tip</th>
            <th>Çalışma Saatleri</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var salon in Model)
        {
                <tr>
                    <td>@salon.Ad</td> <!-- Burada Isim özelliğini kullanıyoruz -->
                    <td>@salon.Tip</td>
                    
                    <td>@salon.CalismaSaatleri</td>
                    <td>
                        <a href="@Url.Action("Edit", "Salon", new { id = salon.Id })">Düzenle</a> |
                        <a href="@Url.Action("Delete", "Salon", new { id = salon.Id })">Sil</a>
                    </td>
                </tr>
        }
    </tbody>
</table>
